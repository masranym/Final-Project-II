<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.3"
        android:background="@drawable/bgts">

    </LinearLayout>

    <ImageView
        android:id="@+id/imagin"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@+id/headtop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ngeag" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/headtop"
        android:text="เหงือกอักเสบ"
        android:textColor="@color/pink"
        android:textSize="25dp" />


    <TextView
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ถแปรงฟันด้วยเกลือวันละ 2 – 3 ครั้งและบ้วนปากด้วยน้ำเกลือบ่อย ๆ รวมทั้งนวดเหงือกด้วยนิ้วมือด้วย ควรอมเกลือเม็ด หรือใช้สมุนไพร หญ้าเกล็ดหอยด้วย	ถ้าเป็นมากหรือมีไข้ ควรไปหาหมอเพื่อพิจารณาให้ยาปฎิชีวนะ นาน 5 – 7 วันและอาจให้กินยาแก้ปวดลดไข้

" />



</RelativeLayout>