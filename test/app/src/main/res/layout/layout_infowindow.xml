<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/bgts"
        android:id="@+id/info_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/info_name"
        android:layout_margin="8dp"
        android:text="Title"
        app:layout_constraintLeft_toRightOf="@id/info_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_vincinity"
        android:layout_margin="8dp"
        android:text="vincinity"
        app:layout_constraintLeft_toRightOf="@id/info_image"
        app:layout_constraintTop_toBottomOf="@id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/info_open_now"
        android:text="open"
        app:layout_constraintLeft_toRightOf="@id/info_image"
        app:layout_constraintTop_toBottomOf="@id/info_vincinity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>