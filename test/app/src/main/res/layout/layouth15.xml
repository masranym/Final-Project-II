<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.3"
        android:background="@drawable/bgts">

    </LinearLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:id="@+id/ss"
        android:src="@drawable/kanta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="คันตาเนื่องจากการแพ้"
        android:textColor="@color/pink"
        android:textSize="25dp" />


    <TextView
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ss"

        android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
        android:text="อาจมีอาการตาแดงเรื่อ ๆ โดยไม่มีขี้ตา กินยาแก้แพ้ คลอร์เฟนิรามีน ครึ่ง – 1 เม็ด วันละ 2 – 3 ครั้ง
	  หาสาเหตุที่ทำให้เป็นและหลีกเลี่ยงเสีย ถ้าไม่ดีขึ้นใน 1 สัปดาห์ ควรไปหาหมอ

" />



</RelativeLayout>